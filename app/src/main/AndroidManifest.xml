<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codeburrow.android.smart_pay">

    <!-- Required to be able to access the Internet. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required to be able to access the camera device. -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name="LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScanQrCodeActivity"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".TransferMoneyActivity"
            android:noHistory="true"
            android:parentActivityName="com.codeburrow.android.smart_pay.ScanQrCodeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codeburrow.android.smart_pay.ScanQrCodeActivity" />
        </activity>
        <activity
            android:name="com.codeburrow.android.smart_pay.ShowQrCodeActivity"
            android:noHistory="true"
            android:parentActivityName="com.codeburrow.android.smart_pay.ScanQrCodeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codeburrow.android.smart_pay.ScanQrCodeActivity" />
        </activity>
        <activity
            android:name="com.codeburrow.android.smart_pay.SuccessfulTransactionActivity"
            android:noHistory="true"
            android:parentActivityName="com.codeburrow.android.smart_pay.ScanQrCodeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codeburrow.android.smart_pay.ScanQrCodeActivity" />
        </activity>
    </application>

</manifest>